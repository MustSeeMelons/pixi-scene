{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "es6",
        "sourceMap": false,
        "module": "es6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "inlineSources": false,
        "types": [
            "node"
        ]
      },
    "exclude": [
        "node_modules",
        "dist"
    ]
  }